<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eleartech.speed.MunicipalityReleasingEditActivity">

    <TextView
        android:id="@+id/fullNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="18dp"
        android:text="Full Name"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/hectaresTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fullNameTextView"
        android:layout_alignStart="@+id/fullNameTextView"
        android:layout_below="@+id/fullNameTextView"
        android:layout_marginTop="20dp"
        android:text="Hectares: 10"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hectaresTextView"
        android:layout_alignStart="@+id/hectaresTextView"
        android:layout_below="@+id/hectaresTextView"
        android:layout_marginTop="46dp"
        android:text="Number of Sacks:"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/numberOfSacksTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView31"
        android:layout_alignStart="@+id/textView31"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:onClick="confirmClicked"
        android:text="Confirm" />
</RelativeLayout>
