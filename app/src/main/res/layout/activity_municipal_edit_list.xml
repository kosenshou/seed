<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eleartech.speed.MunicipalEditListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/no_profile" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                app:srcCompat="@drawable/sample_signature" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/imageView3"
                android:layout_alignStart="@id/imageView3"
                android:layout_below="@id/imageView3"
                android:layout_marginTop="10dp"
                android:text="Farmer Profile"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/firstNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView22"
                android:layout_alignStart="@id/textView22"
                android:layout_below="@id/textView22"
                android:layout_marginTop="10dp"
                android:text="First Name: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/middleNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/firstNameTextView"
                android:layout_alignStart="@id/firstNameTextView"
                android:layout_below="@id/firstNameTextView"
                android:layout_marginTop="5dp"
                android:text="Middle Name: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/lastNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/middleNameTextView"
                android:layout_alignStart="@id/middleNameTextView"
                android:layout_below="@id/middleNameTextView"
                android:layout_marginTop="5dp"
                android:text="Last Name:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/suffixNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/lastNameTextView"
                android:layout_alignStart="@id/lastNameTextView"
                android:layout_below="@id/lastNameTextView"
                android:layout_marginTop="5dp"
                android:text="Suffix Name:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/genderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/suffixNameTextView"
                android:layout_alignStart="@id/suffixNameTextView"
                android:layout_below="@id/suffixNameTextView"
                android:layout_marginTop="10dp"
                android:text="Gender: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/birthdayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/genderTextView"
                android:layout_alignStart="@id/genderTextView"
                android:layout_below="@id/genderTextView"
                android:layout_marginTop="5dp"
                android:text="Birthday: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/contactNumberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/birthdayTextView"
                android:layout_alignStart="@id/birthdayTextView"
                android:layout_below="@id/birthdayTextView"
                android:layout_marginTop="5dp"
                android:text="Contact Number: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/contactNumberTextView"
                android:layout_alignStart="@id/contactNumberTextView"
                android:layout_below="@id/contactNumberTextView"
                android:layout_marginTop="15dp"
                android:text="Address"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/streetTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView32"
                android:layout_alignStart="@id/textView32"
                android:layout_below="@id/textView32"
                android:layout_marginTop="10dp"
                android:text="Purok / Street: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/barangayTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/streetTextView"
                android:layout_alignStart="@id/streetTextView"
                android:layout_below="@id/streetTextView"
                android:layout_marginTop="10dp"
                android:text="Barangay :"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/barangayTextView"
                android:layout_alignStart="@id/barangayTextView"
                android:layout_below="@id/barangayTextView"
                android:layout_marginTop="10dp"
                android:text="Town / Municipality / City: "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/provinceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/cityTextView"
                android:layout_alignStart="@id/cityTextView"
                android:layout_below="@id/cityTextView"
                android:layout_marginTop="10dp"
                android:text="Province:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView37"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/provinceTextView"
                android:layout_alignStart="@id/provinceTextView"
                android:layout_below="@id/provinceTextView"
                android:layout_marginTop="15dp"
                android:text="Land Details"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/seasonTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView37"
                android:layout_alignStart="@id/textView37"
                android:layout_below="@id/textView37"
                android:layout_marginTop="5dp"
                android:text="Season:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/seasonTextView"
                android:layout_alignStart="@id/seasonTextView"
                android:layout_below="@id/seasonTextView"
                android:layout_marginTop="10dp"
                android:text="Area (HA)"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/irrigatedAreaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/textView39"
                android:layout_alignStart="@id/textView39"
                android:layout_below="@id/textView39"
                android:layout_marginTop="5dp"
                android:text="Irrigated (HA):"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rainfedAreaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/irrigatedAreaTextView"
                android:layout_alignStart="@id/irrigatedAreaTextView"
                android:layout_below="@id/irrigatedAreaTextView"
                android:layout_marginTop="5dp"
                android:text="Rainfed (HA):"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/totalAreaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/rainfedAreaTextView"
                android:layout_alignStart="@id/rainfedAreaTextView"
                android:layout_below="@id/rainfedAreaTextView"
                android:layout_marginTop="5dp"
                android:text="Total Area (HA):"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ownershipTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/totalAreaTextView"
                android:layout_alignStart="@id/totalAreaTextView"
                android:layout_below="@id/totalAreaTextView"
                android:layout_marginTop="10dp"
                android:text="Ownership:"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignLeft="@id/ownershipTextView"
                android:layout_alignStart="@id/ownershipTextView"
                android:layout_below="@id/ownershipTextView"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/document_icon" />

            <Button
                android:id="@+id/button17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/imageView5"
                android:layout_alignStart="@id/imageView5"
                android:layout_below="@id/imageView5"
                android:layout_marginTop="10dp"
                android:onClick="viewDocumentClicked"
                android:text="View Document" />

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/button15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:onClick="editClicked"
        android:text="Edit" />

    <Button
        android:id="@+id/button16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="65dp"
        android:layout_marginRight="65dp"
        android:onClick="archiveClicked"
        android:text="Archive" />

</RelativeLayout>
